				<key>1</key>
				<dict>
					<key>name</key>
					<string>punctuation.definition.comment.git-commit</string>
				</dict>
			</dict>
			<key>comment</key>
			<string>Comments don't count when looking for the 'first line' of a commit.</string>
			<key>match</key>
			<string>^\s*(#).*$\n?</string>
			<key>name</key>
			<string>comment.line.number-sign.git-commit</string>
