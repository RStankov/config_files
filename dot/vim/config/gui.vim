" Theme setup
" colors rstankov
set background=light
colorscheme solarized

" Hide the annoying ~ non texts
hi NonText      guifg=bg     guibg=bg     gui=NONE

" Font.
set guifont=Monaco:h14

" Hide toolbar and menubar.
set guioptions-=T
set guioptions-=m

" Scrollbars
set guioptions-=L
set guioptions-=r

" Turn off blinking in normal mode
set gcr=n:blinkon0
