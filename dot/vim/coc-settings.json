{
  "suggest.noselect": true,
  "codeLens.enable": true,
  "solargraph.useBundler": false,
  "snippets.ultisnips.pythonPrompt": false,
  "languageserver": {
    "ruby-lsp": {
      "command": "ruby-lsp",
      "filetypes": ["ruby"],
      "maxRestartCount": 0,
      "initializationOptions": {
        "enabledFeatures": {
          "codeLens": false
        },
        "addonSettings": {
          "Ruby LSP Rails": {
            "enablePendingMigrationsPrompt": false
          }
        }
      }
    }
  }
}
