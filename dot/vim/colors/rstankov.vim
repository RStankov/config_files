" Base on Tomorrow-Night (with airline)
runtime colors/Tomorrow-Night.vim

let g:colors_name = "rstankov"

" hide the annoying ~ non texts
hi NonText term=bold ctermfg=16 gui=bold guifg=#1d1f21 guibg=#1d1f21

" split separator should with same color as status line
hi VertSplit      guifg=#282a2e     guibg=#282a2e     gui=NONE
hi StatusLine     guifg=#282a2e     guibg=#282a2e     gui=bold
hi StatusLineNC   guifg=#282a2e     guibg=#282a2e     gui=NONE
