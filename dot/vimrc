set nocompatible

call pathogen#infect()

filetype plugin on
filetype indent on
syntax on

set clipboard=unnamedplus

set noswapfile
set number
set laststatus=2

set expandtab
set shiftwidth=2

set hlsearch incsearch

set background=dark
colo solarized

command! CEdit e $MYVIMRC
command! CRefresh source $MYVIMRC

nmap gn :NERDTreeToggle<cr>
nmap _ :SplitjoinJoin<cr>
nmap + :SplitjoinSplit<cr>
