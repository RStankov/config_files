# Adjust path:
# ./bin - project specific executables
# ~/bin - executables from config files
# ~/.rbenv/shims - rbenv gem exectuables
export PATH="./bin:./node_modules/.bin:${HOME}/bin:${HOME}/.rbenv/shims:/usr/local/bin:${HOME}/go/bin:/usr/local/sbin:${PATH}:/Applications/Postgres.app/Contents/Versions/9.4/bin"

# Use vim as editor
export EDITOR=mvim

# Point rbenv to GCC
export CC=/usr/bin/gcc

# Google go setup
export GOPATH=$HOME/go

# Initialize zsh completion
autoload compinit

unsetopt menu_complete   # do not autoselect the first completion entry
unsetopt flowcontrol

setopt auto_menu         # show completion menu on succesive tab press
setopt complete_in_word
setopt always_to_end

zmodload -i zsh/complist

compinit

# Initialize colors
autoload -U colors
colors
setopt prompt_subst
setopt transient_rprompt

# Set to this to use case-sensitive completion
CASE_SENSITIVE="true"

# If a command doesn't exists, but it is the name of a directory, perform the cd to that directory.
setopt AUTO_CD

# Make cd push the old directory onto the directory stack.
setopt AUTO_PUSHD

# Donâ€™t push multiple copies of the same directory onto the directory stack.
setopt PUSHD_IGNORE_DUPS

# Keep the directory stack just to 15
DIRSTACKSIZE=15

# Do not enter command lines into the history list if they are duplicates of the previous event.
setopt HIST_IGNORE_DUPS

# Do not enter command lines into the history list if they begin with a blank.
setopt HIST_IGNORE_SPACE

# Append their history list to the history file, rather than overwrite it
setopt APPEND_HISTORY

# Automatically use menu completion after the second consecutive request for completion
setopt AUTO_MENU

# Try to correct the spelling of commands.
setopt CORRECT

# Do not exit on end-of-file. Require the use of exit or logout instead.
setopt IGNORE_EOF

# ZSH HISTORY
HISTFILE=~/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

# Enable Ctrl+A / Ctrl+B
bindkey -e

# Use [UP] [DOWN] for backward and forward search
bindkey "\e[A" history-beginning-search-backward
bindkey "\e[B" history-beginning-search-forward

