function gci () {
  git commit -m "$*"
}

function kill_dev_processes() {
  if ! which kill-port &> /dev/null; then
    npm install -g kill-port
  fi
  kill-port 3000
  kill-port 3001
  kill-port 5000
  kill-port 5001
  kill-port 5051
  pkill -9 ruby
  pkill -9 puma
  pkill -9 spring
  pkill -9 node
  pkill -9 flow
  docker kill $(docker ps -q) 2>/dev/null
}

function nvmuse() {
  nvm use $(cat .nvmrc)
}
