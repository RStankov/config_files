function t() {
  local command="rspec"
  if [[ $* = *spec* ]]; then
    command="rspec"
  elif [[ $* = *features* ]]; then
    command="cucumber"
  fi

  if [ -f "./bin/$command" ]; then
    command="./bin/$command"
  elif [[ -f "./Gemfile" ]]; then
    command="bundle exec $command"
  fi

  clear
  eval $command $*
}

function tjs() {
  command="npm run mocha"
  clear
  eval $command $*
}
