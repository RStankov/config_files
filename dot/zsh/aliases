# bundler
alias bu="bundle update"
alias bi="bundle install"

alias gemopen="bundle open"

# rspec
alias rs="clear && rspec --drb"

# rails
alias r="rails"

# git
alias ga="git add -A"
alias gp="git pull --rebase"
alias grc="git add .; git rebase --continue"
alias gr="git rebase -i"
alias gr10="git rebase -i HEAD~10"
alias gs="git stash"
alias gc="git commit -m"
alias gl="git lol"
alias gd="git diff"
alias gdc="git diff --cached"

alias o="open ."

# ls
alias l="ls -lahF"

# postgress
alias pg-up='pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias pg-down='pg_ctl -D /usr/local/var/postgres stop -s -m fast'

# zeus
alias zc="zeus console"
alias zs="zeus server"
alias zdb="zeus dbconsole"
alias zr="zeus rake"
alias zg="zeus generate"
