# cucumber
alias cc="clear && bundle exec cucumber --drb"
alias ccw="cc -p wip"
alias ccj="cc -p js"
alias ccn="cc -p no-js"

# bundler
alias gemopen="bundle open"

# rspec
alias rs="clear && rspec --drb"

# rails
alias r="rails"
alias migrate="rake db:migrate db:test:prepare"

# specjour
alias spj="clear && bundle exec specjour"

# git
alias ga="git add -A"
alias gp="git pull --rebase"
alias gpc="git add .; git rebase --continue"
alias gr="git rebase -i"
alias gr10="git rebase -i HEAD~10"
alias gs="git stash"
alias gc="git commit -m"
alias gl="git log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'"

alias gitx="open -a /Applications/GitX.app"

alias run_resque="RAILS_ENV=development QUEUE=* VERBOSE=1 rake environment resque:work"
alias o="open ."

# ls
alias l="ls -lahF"